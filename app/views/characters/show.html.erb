<section class="section">
  <div class="container">
    <article class="media">
      <figure class="media-left">
        <p class="image is-128x128">
          <%= image_tag(@character["img"]) %>
        </p>
      </figure>
      <div class="media-content">
        <div class="content">
          <p>
            <h1> <%= @character["name"]%></h1> <h4><%= "aka %s" % @character["nickname"]%></h4>
            <br>
            <h5>Status:</h5> <p><%= @character["status"]%></p>
            <br>
            <h5>Portrayed:</h5> <p><%= @character["portrayed"]%> </p>
            <br>
            <h5>Occupation:</h5>
            <%@character["occupation"].each do |o| %>
                <td><%= o %></td> <br>
            <% end %>
            <br>
            <h5>Appearances Breaking Bad:</h5>
            <%if @character["appearance"].empty? %>
              <%= "No Appearances" %> <br>
            <%else %>
              <%@character["appearance"].each do |t| %>
                    <td><%= link_to "Season %d" % t, season_path("BB",t)%></td> <br>
              <% end %>
            <%end %>
            <br>
            <h5>Appearances Better Call Saul: </h5>
            <%if @character["better_call_saul_appearance"].empty? %>
              <%= "No Appearances" %> <br>
            <%else %>
              <%@character["better_call_saul_appearance"].each do |t| %>
              <td><%= link_to "Season %d" % t, season_path("Saul",t)%></td> <br>
              <% end %>
            <%end %>
          </p>
        </div>
      </div>
    </article>
  </div>
</section>
