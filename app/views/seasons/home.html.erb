<meta name="viewport" content="width=device-width, initial-scale=1" xmlns="http://www.w3.org/1999/html">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
<section class="hero is-link">
  <div class="hero-body">
    <div class="container">
      <nav class="level">
        <div class="level-item">
          <h1 class="title">Tarea 1: Consumir una API</h1>
        </div>
      </nav>
      <nav class="level">
        <div class="level-item">
          <%= form_tag characters_index_path, :method => "get" do %>
            <%= label_tag :search, "Type your search for characters" %>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag  "Search", :name => nil%>
          <%end %>
        </div>
      </nav>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <nav class="level">
      <div class="level-item">
        <span class="icon has-text-warning">
          <i class="fas fa-atom"></i>
        </span>
        <span class="icon has-text-danger">
          <i class="fas fa-atom"></i>
        </span>
        <h1 class="subtitle">Bienvenid@</h1>
        <span class="icon has-text-info">
          <i class="fas fa-atom"></i>
        </span>
        <span class="icon has-text-success">
          <i class="fas fa-atom"></i>
        </span>
      </div>
    </nav>
  </div>
</section>
<section class="section">
  <div class="container">
    <nav class="level-left">
      <div class="level-item">
        <div class="notification is-link">
          Breaking Bad
        </div>
      </div>
    </nav>
    <br>
    <% $temporadas_bb.each_key do |temp| %>
      <nav class="level-left">
        <div class="level-item">
          <br>
          <td><%= link_to "Season %d" % temp, season_path("BB",temp)%></td> <br>
        </div>
      </nav>
      <br>
    <% end %>
  </div>
  <div class="container">
    <nav class="level-left">
      <div class="level-item">
        <div class="notification is-link">
          Better Call Saul
        </div>
      </div>
    </nav>
    <br>
    <% $temporadas_saul.each_key do |temp| %>
      <nav class="level-left">
        <div class="level-item">
          <br>
          <td><%= link_to "Season %d" % temp, season_path("Saul",temp)%></td> <br>
        </div>
      </nav>
      <br>
    <% end %>
  </div>
</section>
<footer class="footer">
  <div class="container">
    Copyright Â© 2021 Tarea 1 Antonia Christensen. All rights reserved.
    <div class="level-right">
      <p class="level-item">
      </p>
    </div>
  </div>
</footer>